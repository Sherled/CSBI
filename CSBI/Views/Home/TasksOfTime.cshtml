@model IEnumerable<CSBI.Data.Model.Task>
<div class="col-10 custom-col-content" style="text-align: center; margin: auto; color:#fff">
    <div style="display:grid">
        <a class="a-custom-standart" style="font-size: 2rem;" asp-action="Index">Все задачи</a>
    </div>
    <table class="table" style="color:black;margin-top: 2rem;">
        <tr><th>Задача</th><th>Время до окончания</th><th>Осталось</th><th></th></tr>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.End</td>
                <td>@task.EndSpan"</td>
            </tr>
        }
    </table>
</div>